    {
      "containerImage": "$CONTAINER_REGISTRY/inference-proxy:latest",
      "command": [
        "/bin/sh",
        "bootstrap.sh"
      ],
      "environmentVariables": [
        {
          "name": "MAA_ENDPOINT",
          "value": "sharedneu.neu.attest.azure.net",
          "strategy": "string"
        }
      ]
    }
  ]
}
